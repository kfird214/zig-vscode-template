{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Deubg)",
            "type": "shell",
            "group": "build",
            "command": "zig",
            "args": [
                "build",
                "-Doptimize=Debug"
            ],
            "isBackground": false,
            "problemMatcher": [
                "$zig",
                "$gcc",
            ],
            "icon": {
                "color": "terminal.ansiBlue",
                "id": "tools",
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build (Release)",
            "type": "shell",
            "group": "build",
            "command": "zig",
            "args": [
                "build",
                "-Doptimize=ReleaseSafe"
            ],
            "isBackground": false,
            "problemMatcher": [
                "$zig",
                "$gcc",
            ],
            "icon": {
                "color": "terminal.ansiBlue",
                "id": "tools",
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build Current (Debug)",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
                "close": false,
                "group": "debug",
                "revealProblems": "onProblem",
            },
            "command": "zig build-exe \"${file}\"",
            "args": [
                "-ODebug",
                "--debug-log",
                "codegen",
                // "-fLLVM",
                // "-ftime-report",
                // "-fstack-report",
                // "-Dlog",
                // "-Dlink-snapshot",
                // "--verbose-link",
                // "--verbose-cc",
                // "--verbose-air",
                // "--verbose-mir",
                // "--verbose-llvm-ir",
                // "--verbose-cimport",
                // "--verbose-llvm-cpu-features",
                // "--debug-compile-errors",
                // "--debug-link-snapshot",
            ],
            "group": "build",
            "problemMatcher": [
                "$zig",
                "$gcc",
            ],
        },
        {
            "label": "Build Current (Test)",
            "detail": "test current active zig file",
            "type": "shell",
            "command": "zig",
            "dependsOn": "crate build folder for current test",
            "args": [
                "test",
                "${file}",
                "-femit-bin=\"${workspaceFolder}/zig-out/bin/tests/${relativeFileDirname}/${fileBasenameNoExtension}.exe\"",
                "--test-no-exec"
            ],
            "problemMatcher": [
                "$gcc",
            ],
            "group": "test",
            "icon": {
                "color": "terminal.ansiRed",
                "id": "beaker"
            },
            "runOptions": {
                "instanceLimit": 5,
                // "reevaluateOnRerun": true
            },
            "options": {
                // "cwd": "${fileDirname}"
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "crate build folder for current test",
            "type": "shell",
            "detail": "helper for current test file, create build folder for current active file",
            "command": ".vscode\\scripts\\make_dir.bat",
            "args": [
                "\"${workspaceFolder}/zig-out/bin/tests/${relativeFileDirname}\""
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": false,
            },
            "promptOnClose": false,
            "isBackground": true,
            "hide": true,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 10
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
